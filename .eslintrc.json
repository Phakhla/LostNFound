{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "app/assets/builds/*",
    "app/javascript/controllers/index.js"
  ],
  "globals": {
    "FontAwesome": "writable",
    "google": "writable"
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": ["error", { "allowShortCircuit": true }]
  }
}
