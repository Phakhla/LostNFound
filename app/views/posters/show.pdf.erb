<div class = "pagesize">
  <div class = "printable" style = "background-color: white;" >
    <div class = "printhead" style = "background-color: red; height: 150px; width: 100%;">
      <b><p style = "font-size: 100px; text-decoration: underline; color: white; text-align: center;"><%= @post.lost_item? ? 'โพสต์ตามหา': 'โพสต์ตามหาเจ้าของ' %></p></b>
    </div>

    <div class = "printbody" style = "padding: 30px; height: 262mm;">
      <%= image_tag(@p["image"], style:"width: 100%; height:550px;") %>

      <div class="row">
        <b><p style = "text-align: center; font-size: 40px; text-decoration: underline;"><%= @post.name %></p></b>
      </div>

      <div class="row">
        <div class="col">
          <b><p style = "font-size: 20px; text-align: center;">
            <%= @post.lost_item? ? 'วันที่หาย: ': 'วันที่เจอ: ' %><%= @post.date.strftime("%d/%m/%y") %>
          </p></b>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <b><p style = "font-size: 20px; text-align: center;">สถานที่: <%= @post.location %></p></b>
        </div>
      </div>

      <div class="row py-1">
        <p style="text-align: center; font-size: 20px;"><%= @p["detail"] %></p>
      </div>
    </div>
      <hr style = "margin: 20px 50px;">
    <div class = "printfoot" style = "padding: 0 50px; width: 90%; margin: auto;">
      <div class = "row" style = "display: -webkit-box; display: -webkit-flex; display: flex;" >
        <div style = "margin-right: 5%; padding-top: 20px;">
          <% avatar_url = @post.user.avatar.attached? ? polymorphic_url(@post.user.avatar) : 'https://media.istockphoto.com/vectors/default-profile-picture-avatar-photo-placeholder-vector-illustration-vector-id1223671392?k=20&m=1223671392&s=612x612&w=0&h=lGpj2vWAI3WUT1JeJWm1PRoHT3V15_1pdcTn2szdwQ0=' %>
          <p class="text-start"><%= image_tag(avatar_url, style:"width: 40px; height: 40px; object-fit: cover; border-radius: 50%;")  %></p>
        </div>
        <div style = "padding-top: 30px;">
          <b><%= @post.user.username %></b>
          <div class = "col" style = "display: -webkit-box; display: -webkit-flex; display: flex;">
            <div style = "width: 200px; margin-right: 5%;">
              <strong>ติดต่อ: </strong><strong>tel:</strong> <%= @post.user.tel %>
            </div>
            <div style = "width: 500px;">
              <strong>facebook:</strong> <%= @post.user.facebook %>
            </div>
          </div>
        </div>

        <div class="qr-code" style="padding-top: 15px;  text-align: right;">
          <img src="<%= PostersHelper.generate_qr(post_url(@post)).to_data_url %>" />
        </div>
      </div>
    </div>
  </div>
</div>
