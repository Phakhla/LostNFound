<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <link href='https://fonts.googleapis.com/css2?family=Prompt:wght@100;200;300;400;500;600;700;800&display=swap' rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" integrity="sha512-6PM0qYu5KExuNcKt5bURAoT6KCThUmHRewN3zUFNaoI6Di7XJPTMoT6K0nsagZKk2OB4L7E3q1uQKHNHd4stIQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
    <script src="https://unpkg.com/dayjs@1.8.21/locale/th.js"></script>

    <style>
      .printable {
        font-family: 'Prompt';
        background-color: white;
      }

      .printhead {
        width: 100%;
        text-align: center;
        background-color: #D10026;
        height: 150px;
      }

      .printbody {
        padding: 30px;
        height: 262mm;

      }

      .printfoot {
        padding: 0 50px;
        width: 90%;
        margin: auto;

      }

      .hrcontact {
        padding-top: 2px;
        border: none;
        background-color: black;
        margin-top: 50px;
        margin-left: 50px;
        margin-right: 160px;

      }

      .extra {
        z-index: 10;
        position: absolute;
        margin-top: -175px;
        width: 100%;
        height: 200px ;
      }

      .qr-code {
        z-index: 10;
        position: fixed;
        margin-left: 830px;
        margin-top: 40px;
        svg {
          width: 120px;
          height: 120px;
        }
      }

      .scan {
        z-index: 20;
        position: fixed;
        margin-top: 155px;
        margin-left: 865px;
      }

      .title{
        font-size: 100px;
        color: white;
        text-align: center;
      }

      .name {
        text-align: center;
        font-size: 40px;
        margin-bottom: 0;

      }

      .data {
        font-size: 20px;
        text-align: center;
        word-wrap: break-word;
      }

      .address{
        word-wrap: break-word;
      }

      .posterimg {
        background-size: cover;
        width: 100%;
        height:550px;
      }

    </style>

    <script>
      $(function() {
        $('*[data-datetime]').each(function(index, elem) {
          const $elem = $(elem);
          const dateStr = $elem.data('datetime');
          $elem.html(dayjs().locale('th').format('DD MMMM YYYY'));
        })
      })
    </script>

  </head>
  <body>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
