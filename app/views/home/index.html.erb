<%= render 'posts/search_form' %>
<br><br>


<div class = "container listposts mt-14" >
    <div style="margin:30px; padding:20px; border:20px">
      <% if !user_signed_in? %>
        <div class="row justify-content-end align-items-center mb-5">
          <div class="col-md-7 order-md-last">
            <div class="btn btn--primary" >
              <i class='fas fa-plus-circle'></i>
              <%= link_to "สร้างโพสต์ประกาศ", category_selects_posts_path %>
            </div>
          </div>
        </div>
      <% end %>
      <% if user_signed_in? %>
        <div class="row justify-content-between align-items-center mb-5">
          <div class="col-md-7 order-md-last">
            <div class="btn btn--primary" >
              <i class='fas fa-plus-circle'></i>
              <%= link_to "สร้างโพสต์ประกาศ", category_selects_posts_path %>
            </div>
          </div>
          <div class="col-md-5  btn-group" >
            <% if @tab == 'my_post' %>
              <%= link_to 'รายการทั้งหมด', root_path , class: "btn btn--outline-secondary" %>
              <%= link_to 'รายการของฉัน', root_path(tab: 'my_post'), class: "btn btn--secondary" %>
            <% else %>
              <%= link_to 'รายการทั้งหมด', root_path, class: "btn btn--secondary" %>
              <%= link_to 'รายการของฉัน', root_path(tab: 'my_post'), class: "btn btn--outline-secondary" %>
            <% end %>
          </div>
        </div>
      <% end %>
        <%= form_with(url: root_path, method: :get, id: 'homeFilter') do |f| %>
          <%= hidden_field_tag 'tab', @tab %>
          <div>
            <%= render 'post_content', posts: @losts, category: 'lost_item', tab: @tab, filter: @filter, f: %>
            <br><br><hr class="style"><br><br>
            <%= render 'post_content', posts: @founds, category: 'found_item', tab: @tab, filter: @filter, f: %>
            <br><br><br>
          </div>
        <% end %>
    </div>

</div>

