<div class="container forgot-password-field mb-5">
  <div class="row text-center">
    <div class="col-lg-12 layout-05">
      <h4 class="font-weight600">ลืมรหัสผ่าน?</h4>
    </div>
    <div class="col-lg-12 layout-05">
      <p>กรอกอีเมลของคุณ และคุณจะได้รับวิธีการเปลี่ยนรหัสผ่านจากเรา</p>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "needs-validation",
               data: {turbo: "false" }, method: :post) do |f| %>

    <div class="layout-05"></div>
    <div class="justify-content-center"  >
      <label class = "pb-2 font-weight500">อีเมล</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control forgot" %>
      <% if resource.errors.full_messages_for(:email).first == "Email can't be blank" %>
        <p class="text-danger"style="font-size:16px">กรุณากรอกอีเมล</p>
      <% end %>
      <% if resource.errors.full_messages_for(:email).first == 'Email not found' %>
        <p class="text-danger"style="font-size:16px">ไม่มีอีเมลนี้ในระบบ กรุณากรอกอีเมลใหม่อีกครั้ง</p>
      <% end %>
    </div>

    <div class=" mt-5 justify-content-center">
      <%= f.submit "ดำเนินการต่อ", class: "btn btn--secondary forgot" %>
    </div>
  <% end %>

  <%= render 'modal' %>

  <%- if controller_name != 'sessions' %>
    <div class="row pt-5">
      <div class = "d-flex justify-content-center mt-5">
        <p style="padding-right: 5px;">กลับไปที่</p>
        <b><%= link_to "เข้าสู่ระบบ", new_session_path(resource_name) %></b>
      </div>
    </div>
  <% end %>
</div>
