<div style="margin:30px; padding:20px; border:20px">
  <div class="container">
    <div class="row ">
      <div class="row justify-content-md">
        <div class="fs-2 col col-lg-2">
          <%= link_to edit_user_registration_path do %>
            <i class="fa-solid fa-arrow-left"></i> ย้อนกลับ
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div class="p-5 mb-4 bg-body rounded-5" style="border: 1px solid;">
      <div class="container-fluid py-5">
        <h4 class="border-bottom pb-4 mb-0">เปลี่ยนรหัสผ่าน</h4>
        <br>
        <%= simple_form_for(@user, url:  password_users_settings_path, method: :put ) do |f| %>
          <% if @user.errors.present? %>
            <div class="alert alert-danger" role="alert">
              Password and Confirm password does not match, Please try again.
            </div>
          <% end %>
          <div class="field">
            <%= f.label :current_password, "รหัสผ่านปัจจุบัน" %><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :password, "รหัสผ่านใหม่" %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :password_confirmation, "ยืนยันรหัสใหม่ผ่าน" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <br><hr>
          <br>
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <div class="actions">
              <%= link_to 'ยกเลิก', edit_user_registration_path, class: "btn btn-outline-warning" %>
              <%= f.submit "บันทึก",  class: "btn btn-warning" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
