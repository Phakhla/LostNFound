<%= render 'posts/search_form' %>
<div style="margin:30px; padding:20px; border:20px">
  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group" role="group" aria-label="First group">
    <% if @tab == 'my_post' %>
      <%= link_to 'ทั้งหมด', root_path, class: "btn btn-primary" %>
      <%= link_to 'รายการของฉัน', lost_posts_path(tab: 'my_post'), class: "btn btn-primary" %>
    <% end %>
    </div>

  </div>
</div>
<div style="margin:30px; padding:20px; border:20px">
  <div class="container">
    <div class="row ">
      <%= form_with(url: lost_posts_path, method: :get, id: 'homeFilter') do |f| %>
        <%= hidden_field_tag 'tab', @tab %>
        <div class="row justify-content-md">
          <div class="fs-2 col col-lg-2">
            <%= link_to root_path do %>
              <i class="fa-solid fa-arrow-left"></i> ตามหาของหาย
            <% end %>
          </div>
          <div class="col-md-auto">
            <% if @tab == 'my_post' %>
              <%= render 'filter', f:, filter: @filter, category: 'lost_item' %>
            <% end %>
          </div>
        </div>
        <hr>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <%= render 'posts/card_content', posts: @losts, category: 'lost_item', tab: @tab, filter: @filter, f:  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<%= paginate @posts %>
