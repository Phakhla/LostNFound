<div class="row row-cols-1 row-cols-md-2 g-4">
<% @posts.each do |post| %>
  <div class="col">
    <div class="card">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= post.name %></h5>
        <p class="card-text"><%= post.category %></p>
        <p class="card-text"><%= post.status %></p>
      </div>
    </div>
  </div>
<% end %>
</div>
<br>
<%= paginate @posts %>
