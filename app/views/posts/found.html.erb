<%= render 'posts/search_form' %>
<div class="listposts mt-14">
  <div class="container pt-5">
    <div class="row justify-content-between align-items-center mb-5">
      <% if @tab == 'my_post' %>
        <div class="col-md-auto order-md-last" style="margin-bottom: 25px;">
          <div class="btn btn--primary-posts btn--w-100" id="button-create-post" >
            <i class='fas fa-plus-circle'></i>
            <%= link_to "สร้างโพสต์", category_selects_posts_path %>
          </div>
        </div>

        <div class="col-md-5">
          <ul class="tabs btn--w-100" >
            <li class="tab-item">
              <%= link_to 'รายการทั้งหมด', root_path , class: "btn btn--outline-secondary tab-link" %>
            </li>
            <li class="tab-item">
              <%= link_to 'รายการของฉัน', found_posts_path(tab: 'my_post'), class: "btn btn--secondary tab-link" %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
    <% if params[:q].present? %>
      <div class="row justify-content-start align-items-center mb-5">
        <div class="col">
          <div class="text-result-search">ผลลัพธ์การค้นหา</div>
          <hr class="style">
          <div class="search-value">
            <p class="text-body font-weight600">ค้นหา :</p>
            <div class="result-tag bg-color--primary200"> <%= params[:q][:name_cont] %></div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row mt-5">
      <%= form_with(url: found_posts_path, method: :get, id: 'homeFilter') do |f| %>
        <%= hidden_field_tag 'tab', @tab %>
        <div class="row border-bottom pb-4 mb-0 d-md-flex">
          <p class="col-auto order-1 header-post">รายการโพสต์ตามหาเจ้าของทั้งหมด(<%= @posts.total_count %>)</p>
          <div class="col-md-5 order-3 order-md-2 d-md-flex">
            <% if @tab == 'my_post' %>
              <%= render 'filter', f:, filter: @filter, category: 'found_item' %>
            <% end %>
          </div>
        </div>
        <br>
        <% if @posts.present? %>
          <div class="row row-cols-1 row-cols-md-4 g-4">
            <%= render 'posts/card_content', posts: @founds, category: 'found_item', tab: @tab, filter: @filter, f:  %>
          </div>
        <% else %>
          <div class="empty-result">
            <div class="bell-item">
              <i class="fa-regular fa-bell-on"></i>
              <p class="text-result">ไม่มีรายการแสดง</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div style="margin-top: 4rem;">
    <%= paginate @posts %>
    <br>
  </div>
</div>
