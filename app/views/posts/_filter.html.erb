<div class="border-bottom pb-2">
  <div class="container">
    <div class="row">
      <div class="col-2">
        <h5>รายการของฉัน</h5>
      </div>
      <div class="col">
        <%= f.hidden_field :status, value: status  %>

        <div class="form-check form-check-inline">
          <%= f.check_box :checkbox1, {
            data: {
              action: 'input->my-posts#checkboxChange',
              'my-posts-target': 'notFoundCheckbox'
            },
            checked: status == 'no_found'
          }, 'no_found', nil %>
          <%= f.label :checkbox1, 'หาเจ้าของ' %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.check_box :checkbox2, {
            data: {
              action: 'input->my-posts#checkboxChange',
              'my-posts-target': 'foundCheckbox'
            },
            checked: status == 'found'
          }, 'found', nil %>
          <%= f.label :checkbox2, 'ปิดประกาศ' %>
        </div>
      </div>
      <div class="col">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button class="btn btn-primary me-md-2" type="button"><i class="fa fa-add"></i>เพิ่มประกาศ</button>
        </div>
      </div>
    </div>
  </div>
</div>
