<div class="container">
  <div class="row spacing-06">
    <div class="col layout-09 text-center">
      <h3>เลือกประเภทโพสต์</h3>
    </div>
  </div>

  <% if user_signed_in? %>
    <div class="row justify-content-center mt-5 mb-5">
      <div class="col-md-6 col-lg-3 text-center mt-5 mt-md-0" id="lost-category-btn">
        <a href="<%= new_post_path(category: 'lost_item') %>" class="none-underline">
          <div class="card-menu">
            <div class="item-menu">
                <i class="fa-regular fa-magnifying-glass"></i>
                <p class="text-subtitle font-weight600">โพสต์ตามหาของ</p>
            </div>
          </div>
        </a>
      </div>
      <div class="col-md-6 col-lg-3 text-center mt-5 mt-md-0" id="found-category-btn">
        <a href="<%= new_post_path(category: 'found_item') %>" class="none-underline">
          <div class="card-menu">
            <div class="item-menu">
              <i class="fa-regular fa-bullhorn"></i>
              <p class="text-subtitle font-weight600">โพสต์หาเจ้าของ</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  <% end %>

  <% if !user_signed_in? %>
    <div class="row justify-content-center mt-5 mb-5">
      <div class="col-md-6 col-lg-3 text-center mt-5 mt-md-0" id="lost-category-btn">
        <a href="<%= new_user_session_path %>" class="none-underline">
          <div class="card-menu">
            <div class="item-menu">
                <i class="fa-regular fa-magnifying-glass"></i>
                <p class="text-subtitle font-weight600">โพสต์ตามหาของ</p>
            </div>
          </div>
        </a>
      </div>
      <div class="col-md-6 col-lg-3 text-center mt-5 mt-md-0" id="found-category-btn">
        <a href="<%= new_user_session_path %>" class="none-underline">
          <div class="card-menu">
            <div class="item-menu">
              <i class="fa-regular fa-bullhorn"></i>
              <p class="text-subtitle font-weight600">โพสต์หาเจ้าของ</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  <% end %>
</div>
