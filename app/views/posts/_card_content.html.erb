<% @posts.each do |post| %>
      <div class="col">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="..." class="card-img" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= post.name %></h5>
                <hr>
                <p class="card-text">วันที่เจอ:<%= post.date %></p>
                <p class="card-text">สถานที่ที่เจอ:<%= post.location %></p>
                <p class="card-text">	&bull; <%= post.status %></p><br>
                <p class="card-text">โพสต์เมื่อวันที่:<%= post.time %></p>
                <%= button_to "ดูรายละเอียด", found_posts_path, :id => "open-contacts-dialog-btn",
                :class => "inbox-sf-add-btn tip", :method => :get %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
