<div class="notification-box">
  <div class="container">
    <div class="row">
      <div class="p-5 mb-4 bg-body rounded-5 noti-border">
        <div class="container-fluid py-5">
          <h4>การแจ้งเตือน</h4>
          <br>
          <%= search_form_for @q do |f| %>
            <%= f.hidden_field :tab, value: 'unread' %>
            <%= f.hidden_field :read_at_null, value: 1 %>
            <ul class="nav tab-noti col-6" role="tab" id="index-notification-tab">
              <li class="nav-item" role="presentation">
                <%= link_to 'ทั้งหมด', notifications_path , class: "btn #{@tab == 'all' ? 'btn tab active' : 'btn tab'}", id: "index-all-notification-button"%>
              </li>
              <li class="nav-item">
                <%= f.button 'ยังไม่ได้อ่าน', type: 'submit', class: "btn #{@tab == 'unread' ? 'btn tab active' : 'btn tab'}", id: "index-unread-notification-button"%>
              </li>
            </ul>
          <% end %>
          <% if @notifications.count == 0 %>
            <%= render 'notifications/count_is_zero' %>
          <% end %>
          <div class="target">
            <% @notifications.each do |notification| %>
              <hr class="margin">
              <%= render 'notifications/all_notification', notification: %>
            <% end %>
          </div>
          <div class="mt-3">
            <%= paginate @notifications %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
