<div class="notifications-box">
  <div class="container">
    <div class="row">
      <div class="bg-body rounded-5 notifications-body">
        <h4>การแจ้งเตือน</h4>
        <%= search_form_for @q do |f| %>
          <%= f.hidden_field :tab, value: 'unread' %>
          <%= f.hidden_field :read_at_null, value: 1 %>
          <ul class="tab-notifications-index" role="tab" id="index-notification-tab">
            <li class="tab-item" role="presentation">
              <%= link_to 'ทั้งหมด', notifications_path , class: "btn #{@tab == 'all' ? 'btn btn--secondary-tab tab-link' : 'btn btn--outline-secondary-tab tab-link'}", id: "index-all-notification-button"%>
            </li>
            <li class="tab-item">
              <%= f.button 'ยังไม่ได้อ่าน', type: 'submit', class: "btn #{@tab == 'unread' ? 'btn btn--secondary-tab tab-link' : 'btn btn--outline-secondary-tab tab-link'}", id: "index-unread-notification-button"%>
            </li>
          </ul>
        <% end %>
        <% if @notifications.count == 0 %>
          <%= render 'notifications/count_is_zero' %>
        <% end %>
        <div class="target">
          <% @notifications.each do |notification| %>
            <hr class="margin-24">
            <%= render 'notifications/all_notification', notification: %>
          <% end %>
        </div>
        <div class="mt-3">
          <%= paginate @notifications %>
        </div>
      </div>
    </div>
  </div>
</div>
